<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="310dp"
    android:background="@drawable/custom_layout_styler"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oxygen_light"
        android:gravity="center"
        android:text="Choose from below"
        android:padding="12dp"
        android:background="@drawable/proctor_dialog_button"
        android:textColor="#ffff"
        android:textSize="18sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:fontFamily="@font/oxygen_light"
                android:gravity="center"
                android:text="Academic Block 1"
                android:textColor="#ffff"
                android:textSize="16sp"
                app:fontFamily="@font/oxygen_light" />

            <TextView
                android:id="@+id/ab2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:fontFamily="@font/oxygen_light"
                android:gravity="center"
                android:text="Academic Block 2"
                android:textColor="#ffff"
                android:textSize="16sp"
                app:fontFamily="@font/oxygen_light" />


            <TextView
                android:id="@+id/adm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:fontFamily="@font/oxygen_light"
                android:gravity="center"
                android:text="Admin Block"
                android:textColor="#ffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/lib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:fontFamily="@font/oxygen_light"
                android:gravity="center"
                android:text="Library"
                android:textColor="#ffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/WHB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:fontFamily="@font/oxygen_light"
                android:gravity="center"
                android:text="Girls Hostel B Block"
                android:textColor="#ffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/MHA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:fontFamily="@font/oxygen_light"
                android:gravity="center"
                android:text="Boys Hostel A Block"
                android:textColor="#ffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/MHB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:fontFamily="@font/oxygen_light"
                android:gravity="center"
                android:text="Boys Hostel B Block"
                android:textColor="#ffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/MHC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:fontFamily="@font/oxygen_light"
                android:gravity="center"
                android:text="Boys Hostel C Block"
                android:textColor="#ffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/vmart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:fontFamily="@font/oxygen_light"
                android:gravity="center"
                android:text="Vmart"
                android:textColor="#ffff"
                android:textSize="16sp" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>